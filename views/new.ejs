<%- include("./partials/header.ejs") %>
<div class="newFormContainer mainContainer">
  <h1>Create a new Note</h1>
  <form action="/notes" method="POST" class="row g-3" id="newForm">
    <!-- ----- Title Section ----- -->
    <div class="form-floating mb-3">
      <input type="text" name="title" class="form-control" id="title" placeholder="title">
      <label for="title">Title</label>
    </div>
    <!-- ----- Description Section ----- -->
    <div class="col-12">
      <div class="form-floating">
        <textarea class="form-control" placeholder="Add your text here" id="description" name="description" style="height: 100px"></textarea>
        <label for="description">Add your text here</label>
      </div>
    </div>
    <!-- ----- File upload Section ----- -->
    <div class="form-floating mb-3">
      <input type="text" name="img" class="form-control" id="img" placeholder="http image">
      <label for="img">Image URL</label>
    </div>
    <!-- ----- color picker Section ----- -->
    <div class="col-12">
      <div class="form-check">
        <label for="exampleColorInput" class="form-label">Note Color</label>
        <input type="color" name="color" class="form-control form-control-color" id="exampleColorInput" value="#563d7c" title="Choose your color">
    </div>
    <!-- ----- Submit button Section ----- -->
    <div class="col-12">
      <button type="submit" class="btn btn-primary">Create</button>
    </div>
  </form>
</div>
<%- include('./partials/footer.ejs') %>
