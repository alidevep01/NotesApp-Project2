<%- include("./partials/header.ejs") %>
  <!-- gird -->
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% for(let i=0; i<notes.length; i++){%> 
    <div class="col">
      <div class="card notesContainer border-dark">
        <div class="card-body">
          <h5 class="card-header text-bg-dark"><a href="/notes/<%= notes[i].id %>">
             <button type="button" class="btn btn-warning"><%= notes[i].title %></button>
            </a></h5>
          <p class="card-text"><%= notes[i].description %> </p>
        </div>
        <img src="<%= notes[i].img %>" class="card-img-bottom" alt="...">
      </div>
    </div>
    <% }  %> 
</div>
