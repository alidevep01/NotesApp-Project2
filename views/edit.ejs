<%- include("./partials/header.ejs") %> 
<div class="newFormContainer mainContainer">
    <h1 class="editNote">Edit Note</h1>
    <form action="/notes/<%= foundNote.id %>?_method=PUT" method="POST" class="row g-3" id="newForm">
      <!-- ----- Title Section ----- -->
      <div class="form-floating mb-3">
        <input type="text" name="title" class="form-control" id="title" placeholder="title" value="<%=foundNote.title%>">
        <label for="title">title</label>
      </div>
      <!-- ----- Description Section ----- -->
      <div class="col-12">
        <div class="form-floating">
          <textarea class="form-control" placeholder="Add your text here" id="description" name="description" style="height: 200px"><%=foundNote.description%></textarea>
          <label for="description">Add your text here</label>
        </div>
      </div>
      <!-- ----- IMAGE URL Section ----- -->
      <div class="form-floating mb-3">
        <input type="text" name="img" class="form-control" id="img" placeholder="image URL" value="<%=foundNote.img%>">
        <label for="title">Image URL</label>
      </div>
      <!-- ----- color picker Section ----- -->
      <div class="col-12">
        <div class="color-picker">
          <label for="color" class="form-label">Note Color</label>
          <input type="color" name="color" class="form-control form-control-color" id="color" value="<%=foundNote.color%>" title="Choose your color" >
      </div>
      <!-- ----- Edit button Section ----- -->
      <div class="col-12">
        <button type="submit" name="submit" class="btn btn-primary">Edit</button>
      </div>
    </form>
  </div>
<%- include('./partials/footer.ejs') %>
